<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.walkvoid.zone.user.business.db.mapper.MenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.github.walkvoid.zone.user.model.entity.Menu">
        <id column="id" property="id"/>
        <result column="menu_code" property="menuCode"/>
        <result column="menu_name" property="menuName"/>
        <result column="url" property="url"/>
        <result column="parent_id" property="parentId"/>
        <result column="menu_type" property="menuType"/>
        <result column="icon" property="icon"/>
        <result column="sort" property="sort"/>
        <result column="permission" property="permission"/>
        <result column="visible" property="visible"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_by" property="createBy"/>
        <result column="update_by" property="updateBy"/>
        <result column="remark" property="remark"/>
    </resultMap>

    <!-- 根据角色ID查询菜单列表 -->
    <select id="selectMenusByRoleId" resultMap="BaseResultMap">
        SELECT m.* FROM menu m
        LEFT JOIN role_menu_rel rmr ON m.id = rmr.menu_id
        WHERE rmr.role_id = #{roleId}
        ORDER BY m.sort ASC
    </select>

    <!-- 根据用户ID查询菜单列表 -->
    <select id="selectMenusByUserId" resultMap="BaseResultMap">
        SELECT DISTINCT m.* FROM menu m
        LEFT JOIN role_menu_rel rmr ON m.id = rmr.menu_id
        LEFT JOIN user_role_rel urr ON rmr.role_id = urr.role_id
        WHERE urr.user_id = #{userId}
          AND m.status = '1'
          AND m.visible = '1'
        ORDER BY m.sort ASC
    </select>
</mapper>